---
//src/components/Card.astro
const {name, position, aboutMe, linkedin, github, cvLink, profileImage } = Astro.props;

import '../styles/card.css';
---

<div class="container">
    <div class="card-container">
        <div class="descripcion">
            <h1>{name}</h1>
            <h2>{position}</h2>
            <p>{aboutMe}</p>
            <div class="icons">
                <a href={linkedin} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        Modrinth
                    </span>
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href={github} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        GitHub
                    </span>
                    <i class="bi bi-arrow-down-circle"></i>
                </a>
                <a href={cvLink} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        Discord
                    </span>
                    <i class="bi bi-discord"></i>
                </a>
            </div>
        </div>
        <div class="image">
            <img src={profileImage} alt="">
        </div>
    </div>
</div>
